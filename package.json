{
	"name": "realworld-hono-drizzle",
	"description": "A RealWorld backend built with Hono and Drizzle",
	"version": "1.0.0",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"bin": "./dist/cli.js",
	"files": ["src", "dist", "LICENSE", "README.md"],
	"license": "ISC",
	"repository": "github:illright/realworld-hono-drizzle",
	"bugs": "https://github.com/illright/realworld-hono-drizzle/issues",
	"keywords": ["realworld", "conduit"],
	"scripts": {
		"dev": "tsx watch src/cli.ts",
		"seed": "tsx scripts/seed.ts",
		"build": "tsup",
		"check": "biome check",
		"typecheck": "tsc --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"@hono/node-server": "^1.13.8",
		"@hono/valibot-validator": "^0.5.2",
		"@libsql/client": "^0.14.0",
		"@sindresorhus/slugify": "^2.2.1",
		"bcryptjs": "^3.0.2",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.40.0",
		"hono": "^4.7.2",
		"valibot": "1.0.0-rc.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@snaplet/copycat": "^6.0.0",
		"@types/node": "^20.17.22",
		"drizzle-kit": "^0.30.5",
		"husky": "^9.1.7",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome", "esbuild"]
	}
}
